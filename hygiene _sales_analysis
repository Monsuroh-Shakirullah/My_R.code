products <- c("Pants", "Bras", "Hygiene Kit", "Menstrual Pads")
sales <- c(120, 85, 60, 150)
month <- "September"

sales_data <- data.frame(Product = products, Sales = sales, Month = month)

print(sales_data)

total_sales <- sum(sales_data$Sales)
print(paste("Total sales in", month, ":", total_sales))

best_seller <- sales_data[which.max(sales_data$Sales), ]
print(paste("Best selling product:", best_seller$Product))

library(ggplot2)
ggplot(sales_data, aes(x = Product, y = Sales, fill = Product)) +
  geom_bar(stat = "identity") +
  ggtitle(paste("Sales Report -", month))
